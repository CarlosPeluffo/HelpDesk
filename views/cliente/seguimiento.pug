extends ../layout

block content
    .bg-image(style="\
        background-image: url('../../images/usuario.jpg'); height: 100vh;")
        .container
            .row
                .col-10.ms-auto.text-center
                    h1(style="font-weight: bold") Seguimiento de solicitud
                .col-2.ms-auto.me-auto
                    .d-grid.gap-2
                        button.btn.btn-danger(type="submit", onclick="location.href='/cliente'")(style="font-weight: bold") VOLVER
            .row(style="padding-top: 3rem")
                .col
                    table.table
                        tr.table-primary.text-center
                            th Fecha de ingreso
                            th Area 
                            th Fecha de egreso
                            th Estado
                            th Detalle raz√≥n de transpaso
                            th Detalle de solucion
                        each solic in solicitudes
                            tr.table-info(style="font-weight: bold")
                                td.text-center= solic.fecha_ingreso.toLocaleString() 
                                td.text-center= solic.Area.nombre_area
                                td.text-center= solic.fecha_egreso ? solic.fecha_egreso.toLocaleString() : solic.fecha_egreso
                                td.text-center= solic.estado
                                td= solic.detalle_razon
                                td= solic.detalle_solucion